{
  "name": "wdio-allure-ts",
  "version": "0.0.1",
  "description": "UI E2E testing util",
  "license": "MIT",
  "author": "Cloudinary <info@cloudinary.com>",
  "homepage": "http://cloudinary.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudinary/wdio-allure-ts"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "cloudinary",
    "allure",
    "reporter",
    "webdriverio",
    "wdio",
    "wdio-plugin",
    "wdio-reporter",
    "test examples",
    "E2E UI",
    "examples"
  ],
  "scripts": {
    "tslint": "tslint -c tslint.json 'src/**/*.ts' -p ./ --fix",
    "clean": "rm -rf ./lib",
    "prettier": "prettier --write 'src/**/*.ts'; prettier --write 'test/**/*.ts'",
    "compile": "npm run clean && npm run prettier && npm run tslint && tsc",
    "test": "npm run test:compilation && npm run test:regression",
    "test:compilation": "npm run compile && git diff --exit-code ./lib",
    "test:regression": "npm run test:regression:chrome && npm run test:regression:firefox",
    "test:regression:chrome": "wdio ./test/wdio.chrome.conf.js --suite regression",
    "test:regression:firefox": "wdio ./test/wdio.firefox.conf.js --suite regression",
    "spec": "wdio ./test/wdio.dev.conf.js --spec",
    "start:sampleApp": "ws --spa ./test/sampleApp/index.html"
  },
  "dependencies": {
    "@types/adm-zip": "0.4.32",
    "@types/mocha": "^5.2.7",
    "@types/request-promise-native": "1.0.16",
    "@wdio/allure-reporter": "5.9.3",
    "@wdio/sync": "5.10.1",
    "adm-zip": "0.4.13",
    "chalk": "2.4.2",
    "request-promise-native": "1.0.7"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/chai-string": "1.4.1",
    "@types/node": "12.0.7",
    "@wdio/cli": "5.10.1",
    "@wdio/local-runner": "5.10.1",
    "@wdio/mocha-framework": "5.10.1",
    "@wdio/selenium-standalone-service": "5.9.3",
    "@wdio/spec-reporter": "5.9.3",
    "chai": "4.2.0",
    "chai-string": "1.5.0",
    "local-web-server": "2.6.1",
    "prettier": "1.16.4",
    "tslint": "5.16.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-microsoft-contrib": "6.0.0",
    "typescript": "3.5.1",
    "webdriverio": "5.10.1"
  }
}
