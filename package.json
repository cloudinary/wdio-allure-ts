{
  "name": "wdio-allure-ts",
  "version": "6.0.0",
  "description": "UI E2E testing util",
  "license": "MIT",
  "author": "Cloudinary <info@cloudinary.com>",
  "homepage": "https://cloudinary.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudinary/wdio-allure-ts"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "wdio-cli": "lib/helpers/runner.js",
    "set-chrome-driver-to-env": "lib/scripts/SetDriverVersionToDotEnv.js"
  },
  "keywords": [
    "cloudinary",
    "allure",
    "reporter",
    "webdriverio",
    "wdio",
    "wdio-plugin",
    "wdio-reporter",
    "test examples",
    "E2E UI",
    "examples"
  ],
  "scripts": {
    "lint": "eslint './src/**/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts'; prettier --write 'src/test/**/*.ts'",
    "prepack": "yarn lint && tsc && cp -R src/helpers/ lib/helpers && cp -R src/scripts/ lib/scripts",
    "setChromeDriverVersion": "node src/scripts/SetDriverVersionToDotEnv.js",
    "test": "yarn setChromeDriverVersion; DEFAULT_TIME_OUT=3000 wdio src/test/wdio.conf.js --suite regression",
    "spec": "DEFAULT_TIME_OUT=3000 wdio src/test/wdio.conf.js --spec",
    "pretest": "yarn lint",
    "start:sampleApp": "ws --spa src/test/sampleApp/index.html",
    "release": "standard-version",
    "report": "allure generate --clean && allure open"
  },
  "dependencies": {
    "@wdio/allure-reporter": "^7.17.3",
    "@wdio/cli": "^7.17.4",
    "@wdio/devtools-service": "^7.17.4",
    "@wdio/local-runner": "^7.17.4",
    "@wdio/mocha-framework": "^7.17.3",
    "@wdio/selenium-standalone-service": "7.7.4",
    "adm-zip": "0.4.16",
    "allure-commandline": "^2.17.2",
    "axios": "^0.21.1",
    "chai": "^4.3.6",
    "chalk": "4.1.0",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.19",
    "sync-request": "^6.1.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.9.0",
    "wdio-docker-service": "^3.2.0",
    "wdio-image-comparison-service": "^3.1.0",
    "wdio-reportportal-reporter": "^7.4.1",
    "wdio-reportportal-service": "^7.3.1",
    "webdriverio": "^7.17.4",
    "yargs": "15.4.1"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^7.1.5",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/adm-zip": "^0.4.33",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-wdio": "^6.6.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.2.11",
    "local-web-server": "4.2.1",
    "prettier": "2.0.5",
    "standard-version": "^9.3.0",
    "typescript": "^4.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './commitlint.config.js'"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
