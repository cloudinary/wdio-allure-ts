{
  "name": "wdio-allure-ts",
  "version": "6.5.2",
  "description": "UI E2E testing util",
  "license": "MIT",
  "author": "Cloudinary <info@cloudinary.com>",
  "homepage": "https://cloudinary.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudinary/wdio-allure-ts"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "wdio-cli": "lib/helpers/runner.js",
    "set-chrome-driver-to-env": "lib/scripts/SetDriverVersionToDotEnv.js"
  },
  "keywords": [
    "cloudinary",
    "allure",
    "reporter",
    "webdriverio",
    "wdio",
    "wdio-plugin",
    "wdio-reporter",
    "test examples",
    "E2E UI",
    "examples"
  ],
  "scripts": {
    "lint": "eslint './src/**/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts'; prettier --write 'src/test/**/*.ts'",
    "prepack": "yarn lint && tsc && cp -R src/helpers/ lib/helpers && cp -R src/scripts/ lib/scripts",
    "setChromeDriverVersion": "node src/scripts/SetDriverVersionToDotEnv.js",
    "test": "wdio src/test/wdio.conf.js --suite regression",
    "spec": "wdio src/test/wdio.conf.js --spec",
    "pretest": "yarn lint; yarn setChromeDriverVersion ",
    "initSelenoid": "node src/scripts/initSelenoid.js",
    "selenoid:start": "yarn initSelenoid && yarn selenoid:down && docker-compose build && docker-compose up -d",
    "selenoid:down": "docker-compose down",
    "start:sampleApp": "ws --spa src/test/sampleApp/index.html",
    "release": "standard-version",
    "report": "allure generate --clean && allure open"
  },
  "resolutions": {
    "minimist": "^1.2.6",
    "trim-newlines": "^3.0.1",
    "ansi-regex": "^5.0.1",
    "nanoid": "^3.1.31",
    "tar": "^6.1.2",
    "trim-off-newlines": "^1.0.3",
    "shelljs": "^0.8.5",
    "node-fetch": "^2.6.7",
    "simple-get": "^3.1.1",
    "follow-redirects": "^1.14.7"
  },
  "dependencies": {
    "@wdio/allure-reporter": "^7.20.3",
    "@wdio/cli": "^7.20.5",
    "@wdio/devtools-service": "^7.20.5",
    "@wdio/local-runner": "^7.20.5",
    "@wdio/mocha-framework": "^7.20.3",
    "@wdio/selenium-standalone-service": "7.7.4",
    "adm-zip": "^0.5.9",
    "allure-commandline": "^2.17.2",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "lodash": "^4.17.21",
    "axios": "^1.1.3",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^3.14.1",
    "wdio-docker-service": "^3.2.0",
    "wdio-image-comparison-service": "^3.1.0",
    "webdriverio": "^7.20.5",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/adm-zip": "^0.4.34",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-no-floating-promise": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-wdio": "^6.6.0",
    "husky": "^4.2.3",
    "lint-staged": "^12.3.7",
    "local-web-server": "^5.2.0",
    "prettier": "2.0.5",
    "standard-version": "^9.3.2",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './commitlint.config.js'"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
